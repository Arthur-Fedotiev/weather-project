<div class="location-container">
  <h1 class="cover-heading position-value"><%= userAddress %></h1>
  <p class="lead position-description"><%= tomorrow %></p>
</div>


<div class="temperature-container">
  <div class="row  align-items-end mr-0">
    <div class="col-8">
      <p><%= tomorrowDayTemp %> &#8451 &#8593; <%= tomorrowNightTemp %> &#8451 &#8595;</p>
      <p></p>
      <h2 class="position-description"><%= tomorrowWeatherDescription %></h2>
    </div>
    <div class="col-4">
      <!-- <i class="fas fa-sun weather-icon"></i> -->
      <img src="<%= tomorrowIconUrl %>" alt="Weather Condition Image" class="weather-icon tomorrow-icon">
    </div>
  </div>
</div>

<div class="scrollmenu">
  <div class="row flex-nowrap">

    <% for (let i = 0; i < tomorrowHourlyTime.length; i++) { %>
    <div class="col-4 hourly-weather">

      <p><%= tomorrowHourlyTime[i] %></p>
      <h3><%= Math.floor(tomorrowHourlyTemperature[i]) %></h3>
      <img src="<%= tomorrowHourlyIcon[i] %>" alt="Weather Condition Image" class="weather-icon-hourly">
      <p><%= tomorrowHourlyWeatherDescription[i] %></p>
    </div>
    <% }; %>

  </div>
</div>
